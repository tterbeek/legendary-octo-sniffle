<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>io.grocli.GrocLi</id>
  <name>GrocLi</name>
  <summary>Shared grocery and shopping lists for households</summary>

  <metadata_license>CC0-1.0</metadata_license>
  <project_license>MIT</project_license>

  <description>
    <p>GrocLi makes shared shopping simple. Create grocery lists that sync instantly between household members. Check items off in real-time, stay coordinated, and avoid buying doubles.</p>
    <p>Perfect for families, partners, roommates, and anyone managing shopping together.</p>
  </description>

  <categories>
    <category>Utility</category>
    <category>Office</category>
    <category>GTK</category>
  </categories>

  <keywords>
    <keyword>shopping</keyword>
    <keyword>groceries</keyword>
    <keyword>family</keyword>
    <keyword>shared lists</keyword>
    <keyword>household</keyword>
    <keyword>tasks</keyword>
  </keywords>

  <launchable type="desktop-id">GrocLi.desktop</launchable>

  <url type="homepage">https://app.grocli.net</url>
  <url type="help">https://app.grocli.net/support</url>
  <url type="bugtracker">https://github.com/tterbeek/legendary-octo-sniffle/issues</url>

  <developer id="grocli.net">
    <name>GrocLi</name>
  </developer>
